<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_empty_state"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_empty_state"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/ic_food"
            android:tint="@color/color_icon_show_empty_state" />

        <onedaycat.com.food.fantasy.customview.CustomTextView
            android:id="@+id/msg_empty_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_padding_layout"
            android:gravity="center_horizontal"
            android:text="@string/msg_empty_state"
            android:textColor="@color/color_font_dark"
            android:textSize="@dimen/small_font" />

    </LinearLayout>


</RelativeLayout>